{
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.1.8"
  },
  "scripts": {
    "start": "concurrently npm:watch:*",
    "watch:tw": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css --watch",
    "watch:hugo": "hugo server",
    "build": "tailwindcss -i ./assets/css/main.css -o ./assets/css/style.css && hugo --minify"
  }
}
